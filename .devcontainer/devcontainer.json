{
  "image": "ghcr.io/playdate-projects/playdate-docker:main",
  "customizations": {
    "vscode": {
      "extensions": ["trixnz.vscode-lua"]
    }
  },
  "remoteUser": "playdate-sdk",
  "features": {
    "git": "latest",
    "github-cli": "latest"
  },
  "settings": {
    "terminal.integrated.defaultProfile.linux": "bash (2)", 
    "terminal.integrated.profiles.linux": {
        "bash": {
            "path": "/bin/bash"
        }
    }
  }
}
